root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 120  # Set a max line length for better readability

[*.md]
trim_trailing_whitespace = false

[*.{yml,yaml}]
indent_size = 2

[docker-compose.yml]
indent_size = 4

[*.php]
insert_final_newline = true
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
quote_type = single  # Enforce single quotes for consistency

[*.json]
indent_size = 2
